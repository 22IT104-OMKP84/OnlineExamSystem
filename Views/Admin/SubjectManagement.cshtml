@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Subject Management";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Subject Management</h5>
                <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addSubjectModal">Add New Subject</button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Subject ID</th>
                                <th>Subject Name</th>
                                <th>Description</th>
                                <th>Credits</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.Subjects != null)
                            {
                                @foreach (var subject in ViewBag.Subjects)
                                {
                                    <tr>
                                        <td>S@(subject.Id.ToString("D3"))</td>
                                        <td>@subject.Name</td>
                                        <td>@subject.Description</td>
                                        <td>@subject.Credits</td>
                                        <td><span class="badge bg-success">@subject.Status</span></td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary" onclick="editSubject(@subject.Id, '@subject.Name', '@subject.Description', @subject.Credits)">Edit</button>
                                            <form method="post" action="@Url.Action("DeleteSubject", "Admin")" style="display: inline;">
                                                <input type="hidden" name="id" value="@subject.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this subject?')">Delete</button>
                                            </form>
                                            <form method="post" action="@Url.Action("UpdateSubjectStatus", "Admin")" style="display: inline;">
                                                <input type="hidden" name="id" value="@subject.Id" />
                                                <input type="hidden" name="status" value="@(subject.Status == "Active" ? "Inactive" : "Active")" />
                                                <button type="submit" class="btn btn-sm btn-outline-secondary">
                                                    @(subject.Status == "Active" ? "Deactivate" : "Activate")
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Subject Modal -->
<div class="modal fade" id="addSubjectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Subject</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="AddSubject" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Subject Name</label>
                        <input type="text" class="form-control" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" name="description" rows="3" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Credits</label>
                        <input type="number" class="form-control" name="credits" min="1" max="6" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Subject</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Subject Modal -->
<div class="modal fade" id="editSubjectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Subject</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="editSubjectForm" method="post" action="@Url.Action("UpdateSubject", "Admin")">
                <div class="modal-body">
                    <input type="hidden" id="editSubjectId" name="id">
                    <div class="mb-3">
                        <label class="form-label">Subject Name</label>
                        <input type="text" class="form-control" id="editSubjectName" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" id="editSubjectDescription" name="description" rows="3" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Credits</label>
                        <input type="number" class="form-control" id="editSubjectCredits" name="credits" min="1" max="6" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update Subject</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function editSubject(id, name, description, credits) {
        document.getElementById('editSubjectId').value = id;
        document.getElementById('editSubjectName').value = name;
        document.getElementById('editSubjectDescription').value = description;
        document.getElementById('editSubjectCredits').value = credits;
        
        // Show the modal
        new bootstrap.Modal(document.getElementById('editSubjectModal')).show();
    }
</script>
