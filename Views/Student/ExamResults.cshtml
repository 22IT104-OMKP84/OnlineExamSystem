@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
    ViewData["Title"] = "Exam Results";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Exam Results</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card border-success h-100">
                            <div class="card-body text-center">
                                <h6 class="card-title text-success">Mathematics</h6>
                                <div class="display-4 text-success fw-bold">85%</div>
                                <p class="card-text">Score: 85/100</p>
                                <p class="card-text small text-muted">Grade: A</p>
                                <p class="card-text small text-muted">Date: Jan 15, 2024</p>
                                <div class="d-grid gap-2">
                                    <button class="btn btn-outline-success btn-sm">View Details</button>
                                    <button class="btn btn-success btn-sm">Download Certificate</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card border-warning h-100">
                            <div class="card-body text-center">
                                <h6 class="card-title text-warning">Physics</h6>
                                <div class="display-4 text-warning fw-bold">78%</div>
                                <p class="card-text">Score: 78/100</p>
                                <p class="card-text small text-muted">Grade: B+</p>
                                <p class="card-text small text-muted">Date: Jan 10, 2024</p>
                                <div class="d-grid gap-2">
                                    <button class="btn btn-outline-warning btn-sm">View Details</button>
                                    <button class="btn btn-warning btn-sm">Download Certificate</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card border-info h-100">
                            <div class="card-body text-center">
                                <h6 class="card-title text-info">Chemistry</h6>
                                <div class="display-4 text-info fw-bold">92%</div>
                                <p class="card-text">Score: 92/100</p>
                                <p class="card-text small text-muted">Grade: A+</p>
                                <p class="card-text small text-muted">Date: Dec 20, 2023</p>
                                <div class="d-grid gap-2">
                                    <button class="btn btn-outline-info btn-sm">View Details</button>
                                    <button class="btn btn-info btn-sm">Download Certificate</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
